---

generic:
  role_description: |
    Install NFS server/client versions v3/v4

ci_templates:
  molecule.yml.j2:
    force: false

github:
  fail_fast: false

molecule:
  platforms_skip:
    - debian10
    - ubuntu1804
  prepare:
    vars:
      prepare_firewall: true

platforms_skip:
  - name: Ubuntu 18.04 LTS
    image: ubuntu1804
  - name: Debian 10 (Buster)
    image: debian10
