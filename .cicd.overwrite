---

generic:
  role_description: |
    Install NFS server/client versions v3/v4

# Supported platforms
platforms:
  centos7:
    ci: false
    supported: true
  debian10:
    ci: false
    supported: true
  debian11:
    ci: false
    supported: true
  ubuntu1804:
    ci: false
    supported: true
  ubuntu2004:
    ci: false
    supported: true
  ubuntu2204:
    ci: false
    supported: false
  fedora36:
    ci: true
    supported: true
  fedora37:
    ci: true
    supported: true

# Molecule
molecule:
  driver: docker
  nodes:
    - name: server
      groups: ['nfs_servers']
      volumes:
        - /export/test:/export/test:rw
      interfaces:
        - network_name: private_network
          ip: 192.168.56.100
    - name: client
      groups: ['nfs_clients']
      interfaces:
        - network_name: private_network
          ip: 192.168.56.101
  prepare:
    vars:
      prepare_firewall: true
      register_hosts: true

ci_templates:
  converge.yml:
    force: false
